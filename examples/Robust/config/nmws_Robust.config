{
  "net_name": "NMWS",
  "global":{
      "model_type": "PY",
      "weights_file": "MatchZoo/examples/Robust/weights/nmws.Robust.444.50.false.254.weights",
      "save_weights_iters": 400,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adam",
      "learning_rate": 0.001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/Robust/corpus_preprocessed.txt",
        "text2_corpus": "./data/Robust/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 50,
        "embed_path": "./data/Robust/embed_glove_d50_norm",
        "vocab_size": 621920,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 254
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/Robust/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/Robust/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/Robust/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/Robust/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.Robust.nmws.444.50.false.254.res"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "nmws.NMWS",
    "setting": {
        "layer_count": [3],
		"layer_size": 64,
        "dropout_rate": 0.3
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss",
       "object_params": { "margin": 1.0 }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

